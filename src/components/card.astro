---
import type { ImageMetadata } from "astro";
import { Picture } from "astro:assets";

const { url, src, alt = "", title } = Astro.props;

interface Props {
  url: string;
  src: ImageMetadata;
  alt?: string;
  title: string;
  pubDateISO?: string;
  pubDateJA?: string;
  isModified?: boolean;
}
---

<article>
  <a href={url}>
    <Picture src={src} alt={alt} />
    <h2>{title}</h2>
  </a>
</article>

<style>
  img {
    aspect-ratio: 16 / 9;
    object-fit: cover;
  }

  h2 {
    font-size: var(--body);
    font-weight: normal;
  }
</style>
