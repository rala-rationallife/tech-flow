---
import Layout from "@layouts/layout.astro";
---

<Layout pageTitle="404 - Page not found">
  <div class="container">
    <h1>404</h1>
    <p>ページが見つかりません</p>
    <a href="/blog/">{`>> 記事一覧へ`}</a>
  </div>
</Layout>

<style is:global>
  main {
    display: grid;
    grid-template-columns: subgrid;
  }
</style>

<style>
  .container {
    grid-column: 2 / -2;
    display: grid;
    gap: var(--body);
    justify-items: center;
    align-content: center;
  }
</style>
